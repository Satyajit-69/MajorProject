<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Earthy Navbar</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet"/>

  <style>
    :root {
      --ink: #1a1a1a;
      --muted: #717171;
      --border: #dddddd;
      --bg: #ffffff;
      --accent: #3d7a4f;       /* earthy green */
      --accent2: #c8a96e;      /* warm sand */
      --hover-bg: #f4f6f2;
      --radius: 2rem;
      --font: 'Plus Jakarta Sans', sans-serif;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }
    body { font-family: var(--font); background: #f0ede8; }

    /* ── NAVBAR ── */
    .main-navbar {
      background: var(--bg);
      border-bottom: 1px solid var(--border);
      padding: 0.75rem 1.5rem;
      position: sticky;
      top: 0;
      z-index: 999;
    }

    .navbar-inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
    }

    /* ── LOGO ── */
    .nav-logo {
      display: flex;
      align-items: center;
      gap: 0.45rem;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.15rem;
      letter-spacing: -0.03em;
      white-space: nowrap;
      flex-shrink: 0;
    }
    /* Leaf icon in a small circle */
    .logo-icon {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background: var(--accent);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }
    .logo-icon i { color: #fff; font-size: 0.85rem; }
    .logo-text { color: var(--ink); }
    .logo-dot  { color: var(--accent); }

    /* ── SEARCH BAR ── */
    .search-bar {
      display: flex;
      align-items: stretch;
      border: 1.5px solid var(--border);
      border-radius: var(--radius);
      overflow: hidden;
      box-shadow: 0 1px 6px rgba(0,0,0,0.07);
      transition: box-shadow 0.2s;
      background: var(--bg);
      flex: 1;
      max-width: 600px;
    }
    .search-bar:hover { box-shadow: 0 3px 14px rgba(0,0,0,0.12); }

    .search-seg {
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 0.55rem 1.15rem;
      cursor: pointer;
      transition: background 0.15s;
      border-right: 1px solid var(--border);
      min-width: 0;
      flex: 1;
    }
    .search-seg:last-of-type { border-right: none; }
    .search-seg:hover { background: var(--hover-bg); }

    .search-seg h6 {
      font-size: 0.68rem;
      font-weight: 700;
      color: var(--ink);
      margin: 0 0 1px;
      letter-spacing: 0.02em;
      text-transform: uppercase;
    }
    .search-seg small {
      font-size: 0.7rem;
      color: var(--muted);
      white-space: nowrap;
    }

    /* Category chips row inside search */
    .search-chips {
      display: flex;
      align-items: center;
      gap: 0.3rem;
      padding: 0 0.75rem;
      border-right: 1px solid var(--border);
    }
    .chip {
      display: flex;
      align-items: center;
      gap: 0.3rem;
      background: var(--hover-bg);
      border: 1px solid var(--border);
      border-radius: 2rem;
      padding: 0.3rem 0.65rem;
      font-size: 0.68rem;
      font-weight: 600;
      color: var(--ink);
      cursor: pointer;
      white-space: nowrap;
      transition: background 0.15s, border-color 0.15s;
    }
    .chip:hover { background: #e8ede4; border-color: var(--accent); }
    .chip.active { background: #e8ede4; border-color: var(--accent); color: var(--accent); }
    .chip i { font-size: 0.65rem; }

    .search-btn {
      background: var(--accent);
      border: none;
      padding: 0 1.2rem;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.45rem;
      transition: background 0.18s;
      flex-shrink: 0;
    }
    .search-btn:hover { background: #30663f; }
    .search-btn i { color: white; font-size: 0.85rem; }
    .search-btn span {
      color: white;
      font-family: var(--font);
      font-size: 0.78rem;
      font-weight: 600;
    }

    /* ── RIGHT SIDE ── */
    .nav-right {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      flex-shrink: 0;
    }

    .nav-text-link {
      text-decoration: none;
      color: var(--ink);
      font-size: 0.78rem;
      font-weight: 600;
      padding: 0.45rem 0.75rem;
      border-radius: 1.5rem;
      transition: background 0.15s;
      white-space: nowrap;
    }
    .nav-text-link:hover { background: var(--hover-bg); }

    .nav-icon-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      color: var(--ink);
      text-decoration: none;
      transition: background 0.15s;
      font-size: 0.9rem;
    }
    .nav-icon-link:hover { background: var(--hover-bg); }

    .nav-divider {
      width: 1px; height: 20px;
      background: var(--border);
      margin: 0 0.25rem;
    }

    .auth-group {
      display: flex;
      align-items: center;
      gap: 0.4rem;
      border: 1px solid var(--border);
      border-radius: 1.5rem;
      padding: 0.3rem 0.4rem 0.3rem 0.75rem;
      cursor: pointer;
      transition: box-shadow 0.15s;
      background: var(--bg);
    }
    .auth-group:hover { box-shadow: 0 2px 8px rgba(0,0,0,0.12); }
    .auth-group i.fa-bars { font-size: 0.8rem; color: var(--ink); }
    .auth-group .user-avatar {
      width: 30px; height: 30px;
      border-radius: 50%;
      background: var(--accent);
      display: flex; align-items: center; justify-content: center;
      color: white; font-size: 0.75rem;
    }

    /* Collapse panel */
    .nav-collapse {
      display: none;
      position: absolute;
      top: calc(100% + 0.5rem);
      right: 1rem;
      background: white;
      border: 1px solid var(--border);
      border-radius: 1rem;
      box-shadow: 0 8px 32px rgba(0,0,0,0.12);
      padding: 0.75rem;
      z-index: 998;
      min-width: 180px;
    }
    .nav-collapse.open { display: block; }
    .nav-collapse a {
      display: block;
      padding: 0.6rem 0.75rem;
      font-size: 0.82rem;
      font-weight: 500;
      color: var(--ink);
      text-decoration: none;
      border-radius: 0.5rem;
      transition: background 0.15s;
    }
    .nav-collapse a:hover { background: var(--hover-bg); }

    /* Mobile */
    .nav-toggler {
      display: none;
      background: none;
      border: 1px solid var(--border);
      border-radius: 0.5rem;
      padding: 0.35rem 0.6rem;
      cursor: pointer;
      color: var(--ink);
      font-size: 1rem;
    }
    .search-bar-mobile {
      display: none;
      width: 100%;
      margin-top: 0.75rem;
      border: 1px solid var(--border);
      border-radius: 0.85rem;
      background: var(--hover-bg);
      padding: 0.65rem 1rem;
      align-items: center;
      gap: 0.6rem;
      cursor: pointer;
      box-shadow: 0 1px 4px rgba(0,0,0,0.06);
    }
    .search-bar-mobile i { color: var(--muted); font-size: 0.85rem; }
    .search-bar-mobile span { font-size: 0.78rem; font-weight: 600; color: var(--ink); }

    @media (max-width: 900px) {
      .search-bar { display: none; }
      .search-bar-mobile { display: flex; }
      .nav-text-link { display: none; }
      .nav-toggler { display: block; }
      .main-navbar { position: relative; }
    }
    @media (max-width: 480px) {
      .logo-text { display: none; }
    }
  </style>
</head>
<body>

<nav class="main-navbar">
  <div class="navbar-inner">

    <!-- Logo: leaf icon in circle + wordmark -->
    <a class="nav-logo" href="/">
      <div class="logo-icon"><i class="fa-solid fa-leaf"></i></div>
      <span class="logo-text">earthy<span class="logo-dot">.</span></span>
    </a>

    <!-- Search bar (desktop) — now with category chips in the middle -->
    <div class="search-bar">
      <div class="search-seg" style="flex: 1.2;">
        <h6>Where</h6>
        <small>Search destinations</small>
      </div>

      <!-- Category chips replacing the two date pickers in the middle -->
      <div class="search-chips">
        <div class="chip active"><i class="fa-solid fa-tree"></i> Nature</div>
        <div class="chip"><i class="fa-solid fa-water"></i> Beach</div>
        <div class="chip"><i class="fa-solid fa-mountain"></i> Mountains</div>
      </div>

     

      
    </div>

    <!-- Right side -->
    <div class="nav-right">
      <a class="nav-text-link" href="/listings/new">Become a host</a>
      <a class="nav-icon-link" href="/language"><i class="fa-solid fa-globe"></i></a>
      <div class="nav-divider"></div>

      <div class="auth-group" id="authToggle">
        <i class="fa-solid fa-bars"></i>
        <div class="user-avatar"><i class="fa-solid fa-user"></i></div>
      </div>
      <div class="nav-collapse" id="authMenu">
        <a href="/signup">Sign up</a>
        <a href="/login">Log in</a>
        <hr style="margin: 0.4rem 0; border-color: var(--border);">
        <a href="/listings/new">Become a host</a>
        <a href="/listings">Explore stays</a>
      </div>

      <button class="nav-toggler" id="mobileToggler">
        <i class="fa-solid fa-bars"></i>
      </button>
    </div>
  </div>

  <!-- Mobile search pill -->
  <div class="search-bar-mobile">
    <i class="fa-solid fa-magnifying-glass"></i>
    <span>Where to?</span>
  </div>

  <!-- Mobile nav collapse -->
  <div class="nav-collapse" id="mobileMenu" style="right: auto; left: 1rem;">
    <a href="/listings">Explore</a>
    <a href="/listings/new">Become a host</a>
    <a href="/language">Language</a>
    <hr style="margin: 0.4rem 0; border-color: var(--border);">
    <a href="/signup">Sign up</a>
    <a href="/login">Log in</a>
  </div>
</nav>

<script>
  // chip toggle
  document.querySelectorAll('.chip').forEach(chip => {
    chip.addEventListener('click', () => {
      document.querySelectorAll('.chip').forEach(c => c.classList.remove('active'));
      chip.classList.add('active');
    });
  });

  const authToggle = document.getElementById('authToggle');
  const authMenu   = document.getElementById('authMenu');
  authToggle.addEventListener('click', e => {
    e.stopPropagation();
    authMenu.classList.toggle('open');
    document.getElementById('mobileMenu').classList.remove('open');
  });

  const mobileToggler = document.getElementById('mobileToggler');
  const mobileMenu    = document.getElementById('mobileMenu');
  mobileToggler.addEventListener('click', e => {
    e.stopPropagation();
    mobileMenu.classList.toggle('open');
    authMenu.classList.remove('open');
  });

  document.addEventListener('click', () => {
    document.querySelectorAll('.nav-collapse').forEach(m => m.classList.remove('open'));
  });
</script>

</body>
</html>