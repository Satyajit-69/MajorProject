<% layout('/layouts/boilerplate') -%>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,700;1,9..144,300;1,9..144,700&family=Geist:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
/* â”€â”€ ROOT â”€â”€ */
:root {
  --bg:       #ffffff;
  --bg-soft:  #faf9f8;
  --bg-muted: #f3f2f0;
  --card:     #ffffff;
  --border:   #e8e4e0;
  --ink:      #111111;
  --muted:    #888880;
  --red:      #d0251a;
  --red-deep: #a81e15;
  --red-soft: rgba(208,37,26,0.08);
  --white:    #ffffff;
  --serif:    'Fraunces', Georgia, serif;
  --sans:     'Geist', sans-serif;
}

*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

body {
  background: var(--bg);
  color: var(--ink);
  font-family: var(--sans);
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
}

/* â”€â”€ SCROLL REVEAL â”€â”€ */
.reveal {
  opacity: 0;
  transform: translateY(36px);
  transition: opacity 0.75s ease, transform 0.75s ease;
}
.reveal.visible { opacity: 1; transform: translateY(0); }
.reveal-delay-1 { transition-delay: 0.1s; }
.reveal-delay-2 { transition-delay: 0.2s; }
.reveal-delay-3 { transition-delay: 0.3s; }
.reveal-delay-4 { transition-delay: 0.4s; }

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   HERO
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  padding: 6rem 2rem 5rem;
  background: var(--bg);
}
.hero-bg {
  position: absolute;
  inset: 0;
  z-index: 0;
  overflow: hidden;
}
.hero-bg::before {
  content: '';
  position: absolute;
  width: 800px; height: 800px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(208,37,26,0.09) 0%, transparent 70%);
  top: -250px; right: -200px;
  animation: floatA 14s ease-in-out infinite alternate;
}
.hero-bg::after {
  content: '';
  position: absolute;
  width: 600px; height: 600px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(208,37,26,0.06) 0%, transparent 70%);
  bottom: -100px; left: -150px;
  animation: floatB 18s ease-in-out infinite alternate;
}
@keyframes floatA {
  from { transform: translate(0,0) scale(1); }
  to   { transform: translate(-60px,80px) scale(1.2); }
}
@keyframes floatB {
  from { transform: translate(0,0) scale(1); }
  to   { transform: translate(80px,-60px) scale(1.15); }
}
.hero-grid {
  position: absolute;
  inset: 0;
  background-image: radial-gradient(circle, rgba(0,0,0,0.07) 1px, transparent 1px);
  background-size: 32px 32px;
  z-index: 1;
  mask-image: radial-gradient(ellipse at center, black 30%, transparent 80%);
}
.hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  max-width: 920px;
}

.hero-eyebrow {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: var(--red-soft);
  border: 1px solid rgba(208,37,26,0.2);
  border-radius: 2rem;
  padding: 0.38rem 1.1rem;
  font-size: 0.68rem;
  font-weight: 600;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  color: var(--red);
  margin-bottom: 2rem;
  animation: fadeDown 0.8s ease 0.2s both;
}
@keyframes fadeDown {
  from { opacity: 0; transform: translateY(-14px); }
  to   { opacity: 1; transform: translateY(0); }
}
@keyframes fadeUp {
  from { opacity: 0; transform: translateY(28px); }
  to   { opacity: 1; transform: translateY(0); }
}

.hero-title {
  font-family: var(--serif);
  font-size: clamp(3.4rem, 9vw, 7.8rem);
  font-weight: 300;
  line-height: 1.05;
  letter-spacing: -0.02em;
  color: var(--ink);
  animation: fadeUp 1s ease 0.4s both;
}
.hero-title em { font-style: italic; color: var(--red); }
.hero-title .line { display: block; }

.hero-sub {
  margin: 1.8rem auto 0;
  font-size: clamp(0.88rem, 2vw, 1.05rem);
  color: var(--muted);
  font-weight: 300;
  line-height: 1.75;
  max-width: 540px;
  animation: fadeUp 1s ease 0.6s both;
}
.hero-actions {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  margin-top: 2.5rem;
  flex-wrap: wrap;
  animation: fadeUp 1s ease 0.8s both;
}

.btn-primary-hero {
  background: var(--red);
  color: white;
  border: none;
  padding: 0.88rem 2.3rem;
  border-radius: 3rem;
  font-family: var(--sans);
  font-size: 0.83rem;
  font-weight: 600;
  letter-spacing: 0.03em;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s, background 0.2s;
  box-shadow: 0 4px 20px rgba(208,37,26,0.3);
}
.btn-primary-hero:hover {
  transform: translateY(-2px);
  background: var(--red-deep);
  box-shadow: 0 8px 32px rgba(208,37,26,0.4);
  color: white;
  text-decoration: none;
}
.btn-ghost-hero {
  background: transparent;
  color: var(--ink);
  border: 1.5px solid var(--border);
  padding: 0.88rem 2.3rem;
  border-radius: 3rem;
  font-family: var(--sans);
  font-size: 0.83rem;
  font-weight: 500;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  transition: border-color 0.2s, background 0.2s;
}
.btn-ghost-hero:hover {
  border-color: var(--ink);
  background: var(--bg-muted);
  color: var(--ink);
  text-decoration: none;
}

.scroll-hint {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.4rem;
  color: var(--muted);
  font-size: 0.6rem;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  animation: fadeUp 1s ease 1.2s both;
}
.scroll-dot {
  width: 20px; height: 32px;
  border: 1.5px solid var(--border);
  border-radius: 10px;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 5px;
}
.scroll-dot::after {
  content: '';
  width: 4px; height: 7px;
  background: var(--red);
  border-radius: 2px;
  animation: scrollBob 1.6s ease-in-out infinite;
}
@keyframes scrollBob {
  0%,100% { transform: translateY(0); opacity: 1; }
  50%      { transform: translateY(8px); opacity: 0.25; }
}

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   STATS BAR
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.stats-bar {
  background: var(--ink);
  padding: 2.5rem 2rem;
}
.stats-inner {
  max-width: 1100px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
}
.stat-item {
  text-align: center;
  padding: 1rem 1.5rem;
  border-right: 1px solid rgba(255,255,255,0.1);
}
.stat-item:last-child { border-right: none; }
.stat-num {
  font-family: var(--serif);
  font-size: 2.8rem;
  font-weight: 700;
  color: var(--red);
  line-height: 1;
  display: block;
}
.stat-label {
  font-size: 0.7rem;
  color: rgba(255,255,255,0.4);
  margin-top: 0.4rem;
  letter-spacing: 0.07em;
  text-transform: uppercase;
  font-weight: 400;
}

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   SECTION COMMONS
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.section {
  padding: 7rem 2rem;
  max-width: 1200px;
  margin: 0 auto;
}
.section-tag {
  display: inline-block;
  font-size: 0.63rem;
  font-weight: 700;
  letter-spacing: 0.14em;
  text-transform: uppercase;
  color: var(--red);
  margin-bottom: 0.85rem;
}
.section-heading {
  font-family: var(--serif);
  font-size: clamp(2.2rem, 5vw, 3.6rem);
  font-weight: 300;
  line-height: 1.15;
  letter-spacing: -0.01em;
  color: var(--ink);
}
.section-heading em { font-style: italic; color: var(--red); }
.section-sub {
  margin-top: 1rem;
  font-size: 0.92rem;
  color: var(--muted);
  font-weight: 300;
  line-height: 1.75;
  max-width: 480px;
}

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   HOW IT WORKS
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.steps-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
  margin-top: 4rem;
}
.step-card {
  background: var(--bg-soft);
  border: 1px solid var(--border);
  border-radius: 1.25rem;
  padding: 2rem;
  position: relative;
  overflow: hidden;
  transition: border-color 0.3s, transform 0.3s, box-shadow 0.3s;
}
.step-card::after {
  content: '';
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--red), #ff6b5b);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.4s ease;
}
.step-card:hover { border-color: rgba(208,37,26,0.2); transform: translateY(-5px); box-shadow: 0 16px 40px rgba(0,0,0,0.07); }
.step-card:hover::after { transform: scaleX(1); }
.step-num {
  font-family: var(--serif);
  font-size: 5rem;
  font-weight: 700;
  color: rgba(0,0,0,0.04);
  line-height: 1;
  margin-bottom: 0.5rem;
}
.step-icon {
  width: 44px; height: 44px;
  border-radius: 0.75rem;
  background: var(--red-soft);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1.2rem;
  font-size: 1rem;
  color: var(--red);
}
.step-title { font-size: 1rem; font-weight: 600; color: var(--ink); margin-bottom: 0.55rem; }
.step-desc  { font-size: 0.82rem; color: var(--muted); line-height: 1.7; font-weight: 300; }

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   MARQUEE
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.marquee-section {
  padding: 3.5rem 0;
  overflow: hidden;
  background: var(--bg-soft);
  border-top: 1px solid var(--border);
  border-bottom: 1px solid var(--border);
}
.marquee-label {
  text-align: center;
  font-size: 0.63rem;
  letter-spacing: 0.14em;
  text-transform: uppercase;
  color: var(--muted);
  margin-bottom: 1.75rem;
}
.marquee-track {
  display: flex;
  gap: 1rem;
  width: max-content;
  animation: marquee 30s linear infinite;
}
.marquee-track:hover { animation-play-state: paused; }
@keyframes marquee {
  from { transform: translateX(0); }
  to   { transform: translateX(-50%); }
}
.dest-pill {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: var(--white);
  border: 1px solid var(--border);
  border-radius: 3rem;
  padding: 0.55rem 1.1rem;
  white-space: nowrap;
  font-size: 0.8rem;
  font-weight: 500;
  color: var(--ink);
  transition: border-color 0.2s, color 0.2s;
  text-decoration: none;
}
.dest-pill:hover { border-color: var(--red); color: var(--red); text-decoration: none; }
.dest-pill .flag { font-size: 1rem; }

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   SPLIT SECTIONS
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.split-section {
  padding: 7rem 2rem;
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 5rem;
  align-items: center;
}
.split-section.reverse { direction: rtl; }
.split-section.reverse > * { direction: ltr; }
.split-visual {
  position: relative;
  border-radius: 1.5rem;
  overflow: hidden;
  aspect-ratio: 4/3;
  background: var(--bg-muted);
  border: 1px solid var(--border);
}
.split-visual-inner {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 5.5rem;
}
.split-visual::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(208,37,26,0.06) 0%, transparent 60%);
  pointer-events: none;
}
.split-floating-card {
  position: absolute;
  bottom: 1.25rem;
  left: 1.25rem;
  background: rgba(255,255,255,0.92);
  backdrop-filter: blur(12px);
  border: 1px solid var(--border);
  border-radius: 1rem;
  padding: 0.85rem 1.1rem;
  z-index: 2;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
}
.split-floating-card .fc-label { font-size: 0.6rem; color: var(--muted); text-transform: uppercase; letter-spacing: 0.08em; font-weight: 500; }
.split-floating-card .fc-value { font-family: var(--serif); font-size: 1.6rem; color: var(--red); font-weight: 700; line-height: 1.2; }
.split-floating-card .fc-sub   { font-size: 0.67rem; color: var(--muted); margin-top: 1px; }

.feature-list { margin-top: 2rem; display: flex; flex-direction: column; gap: 1.1rem; }
.feature-item { display: flex; align-items: flex-start; gap: 0.85rem; }
.feature-dot {
  width: 32px; height: 32px;
  border-radius: 50%;
  background: var(--red-soft);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 0.8rem;
  color: var(--red);
}
.feature-text h5 { font-size: 0.88rem; font-weight: 600; color: var(--ink); margin-bottom: 0.2rem; }
.feature-text p  { font-size: 0.78rem; color: var(--muted); line-height: 1.65; font-weight: 300; }

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   TESTIMONIALS
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.testimonials-bg { background: var(--ink); }
.testimonials-inner { max-width: 1200px; margin: 0 auto; padding: 7rem 2rem; }
.testimonials-inner .section-heading { color: var(--white); }
.testi-grid { display: grid; grid-template-columns: repeat(3,1fr); gap: 1.5rem; margin-top: 4rem; }
.testi-card {
  background: rgba(255,255,255,0.04);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 1.25rem;
  padding: 1.75rem;
  transition: transform 0.3s, border-color 0.3s;
}
.testi-card:hover { transform: translateY(-4px); border-color: rgba(208,37,26,0.3); }
.testi-stars { color: var(--red); font-size: 0.75rem; margin-bottom: 1rem; letter-spacing: 2px; }
.testi-quote {
  font-family: var(--serif);
  font-size: 1rem;
  font-style: italic;
  color: rgba(255,255,255,0.82);
  line-height: 1.65;
  font-weight: 300;
  margin-bottom: 1.5rem;
}
.testi-author { display: flex; align-items: center; gap: 0.75rem; }
.testi-avatar {
  width: 38px; height: 38px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1rem;
  background: rgba(208,37,26,0.15);
  border: 1px solid rgba(208,37,26,0.25);
}
.testi-name { font-size: 0.8rem; font-weight: 600; color: var(--white); }
.testi-loc  { font-size: 0.68rem; color: rgba(255,255,255,0.35); }

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   CATEGORIES
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.categories-inner { max-width: 1200px; margin: 0 auto; padding: 7rem 2rem; }
.cat-grid { display: grid; grid-template-columns: repeat(4,1fr); gap: 1rem; margin-top: 3.5rem; }
.cat-card {
  background: var(--bg-soft);
  border: 1px solid var(--border);
  border-radius: 1rem;
  padding: 1.5rem 1.25rem;
  text-align: center;
  text-decoration: none;
  display: block;
  transition: transform 0.25s, border-color 0.25s, box-shadow 0.25s;
}
.cat-card:hover { transform: translateY(-5px); border-color: rgba(208,37,26,0.25); box-shadow: 0 10px 32px rgba(208,37,26,0.08); text-decoration: none; }
.cat-icon  { font-size: 2.1rem; margin-bottom: 0.75rem; display: block; }
.cat-name  { font-size: 0.82rem; font-weight: 600; color: var(--ink); margin-bottom: 0.2rem; }
.cat-count { font-size: 0.68rem; color: var(--muted); }

/* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
   CTA BAND
â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
.cta-band-wrap { padding: 6rem 2rem 0; }
.cta-band {
  max-width: 1200px;
  margin: 0 auto;
  border-radius: 2rem;
  background: var(--red);
  padding: 5rem 3rem;
  text-align: center;
  position: relative;
  overflow: hidden;
}
.cta-band::before {
  content: '';
  position: absolute;
  width: 700px; height: 700px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  top: 50%; left: 50%;
  transform: translate(-50%,-50%);
  pointer-events: none;
}
.cta-band::after {
  content: '';
  position: absolute;
  inset: 0;
  background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
  background-size: 28px 28px;
  pointer-events: none;
}
.cta-band h2 { font-family: var(--serif); font-size: clamp(2rem,5vw,3.5rem); font-weight: 300; color: var(--white); line-height: 1.15; position: relative; z-index: 1; }
.cta-band h2 em { font-style: italic; }
.cta-band p { margin: 1rem auto 0; font-size: 0.95rem; color: rgba(255,255,255,0.75); max-width: 460px; line-height: 1.7; font-weight: 300; position: relative; z-index: 1; }
.cta-band-actions { display: flex; align-items: center; justify-content: center; gap: 1rem; margin-top: 2.5rem; flex-wrap: wrap; position: relative; z-index: 1; }

.btn-white {
  background: white;
  color: var(--red);
  border: none;
  padding: 0.88rem 2.3rem;
  border-radius: 3rem;
