<% layout('/layouts/boilerplate') %>
<body>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
  :root {
    --bg:        #f7f7f5;
    --white:     #ffffff;
    --ink:       #1a1a1a;
    --subtle:    #f0efed;
    --border:    #e8e8e4;
    --muted:     #9a9a96;
    --accent:    #e8441a;
    --radius-sm: 0.75rem;
    --radius-lg: 1.25rem;
    --font:      'Plus Jakarta Sans', sans-serif;
    --shadow-sm: 0 1px 3px rgba(0,0,0,0.06), 0 1px 2px rgba(0,0,0,0.04);
    --shadow-md: 0 4px 16px rgba(0,0,0,0.08), 0 2px 6px rgba(0,0,0,0.04);
    --shadow-lg: 0 12px 40px rgba(0,0,0,0.12);
  }

  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  body {
    background: var(--bg);
    font-family: var(--font);
    color: var(--ink);
    -webkit-font-smoothing: antialiased;
  }

  /* ── TOP NAV STRIP ── */
  .top-strip {
    background: var(--white);
    border-bottom: 1px solid var(--border);
    padding: 1.1rem 2.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: sticky;
    top: 0;
    z-index: 200;
  }
  .top-strip h2 {
    font-size: 1.05rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  .top-strip h2 span { color: var(--accent); }
  .listing-count {
    font-size: 0.78rem;
    color: var(--muted);
    font-weight: 400;
  }

  /* ── FILTER SCROLL ── */
  #filter-bar {
    background: var(--white);
    border-bottom: 1px solid var(--border);
    display: flex;
    align-items: center;
    overflow-x: auto;
    scrollbar-width: none;
    padding: 0 2rem;
    gap: 0.25rem;
    position: sticky;
    top: 57px;
    z-index: 100;
  }
  #filter-bar::-webkit-scrollbar { display: none; }

  .filter-pill {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px;
    padding: 0.9rem 1rem;
    color: var(--muted);
    font-size: 0.62rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    white-space: nowrap;
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.18s ease;
    flex: 0 0 auto;
    user-select: none;
    border-radius: 0;
  }
  .filter-pill i { font-size: 1.05rem; transition: transform 0.18s; }
  .filter-pill:hover { color: var(--ink); }
  .filter-pill:hover i { transform: translateY(-1px); }
  .filter-pill.active { color: var(--ink); border-bottom-color: var(--ink); }

  .bar-spacer { flex: 1; min-width: 1rem; }

  /* Tax toggle */
  .tax-toggle-wrap {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0 0.5rem 1.5rem;
    flex-shrink: 0;
    border-left: 1px solid var(--border);
  }
  .tax-toggle-wrap label.lbl {
    font-size: 0.65rem;
    color: var(--muted);
    font-weight: 500;
    white-space: nowrap;
    cursor: pointer;
  }
  .toggle-switch {
    position: relative;
    width: 34px;
    height: 18px;
    flex-shrink: 0;
  }
  .toggle-switch input { opacity: 0; width: 0; height: 0; }
  .toggle-track {
    position: absolute;
    inset: 0;
    border-radius: 18px;
    background: var(--border);
    cursor: pointer;
    transition: background 0.2s;
  }
  .toggle-track::after {
    content: '';
    position: absolute;
    top: 2px; left: 2px;
    width: 14px; height: 14px;
    border-radius: 50%;
    background: white;
    box-shadow: var(--shadow-sm);
    transition: transform 0.2s;
  }
  .toggle-switch input:checked + .toggle-track { background: var(--ink); }
  .toggle-switch input:checked + .toggle-track::after { transform: translateX(16px); }

  /* Sort button */
  .sort-wrap {
    padding: 0 2.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 1.5rem 0 0.5rem;
  }
  .result-label {
    font-size: 0.8rem;
    color: var(--muted);
  }
  .result-label strong { color: var(--ink); font-weight: 600; }
  .sort-btn {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    background: var(--white);
    color: var(--ink);
    border: 1px solid var(--border);
    padding: 0.45rem 0.95rem;
    border-radius: var(--radius-sm);
    font-size: 0.72rem;
    font-family: var(--font);
    font-weight: 600;
    letter-spacing: 0.02em;
    cursor: pointer;
    transition: all 0.15s;
    box-shadow: var(--shadow-sm);
  }
  .sort-btn:hover { border-color: var(--ink); }

  /* ── GRID ── */
  .listings-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    padding: 1rem 2.5rem 3rem;
  }
  @media (max-width: 1200px) { .listings-grid { grid-template-columns: repeat(3, 1fr); } }
  @media (max-width: 860px)  { .listings-grid { grid-template-columns: repeat(2, 1fr); } }
  @media (max-width: 540px)  { .listings-grid { grid-template-columns: 1fr; padding: 1rem 1.25rem 2rem; } }

  /* ── CARD ── */
  .listing-link {
    text-decoration: none;
    color: inherit;
    display: block;
    border-radius: var(--radius-lg);
    opacity: 0;
    animation: riseIn 0.45s ease forwards;
  }

  @keyframes riseIn {
    from { opacity: 0; transform: translateY(14px); }
    to   { opacity: 1; transform: translateY(0); }
  }
  .listings-grid .listing-link:nth-child(1)  { animation-delay: 0.04s; }
  .listings-grid .listing-link:nth-child(2)  { animation-delay: 0.08s; }
  .listings-grid .listing-link:nth-child(3)  { animation-delay: 0.12s; }
  .listings-grid .listing-link:nth-child(4)  { animation-delay: 0.16s; }
  .listings-grid .listing-link:nth-child(5)  { animation-delay: 0.20s; }
  .listings-grid .listing-link:nth-child(6)  { animation-delay: 0.24s; }
  .listings-grid .listing-link:nth-child(7)  { animation-delay: 0.28s; }
  .listings-grid .listing-link:nth-child(8)  { animation-delay: 0.32s; }
  .listings-grid .listing-link:nth-child(n+9) { animation-delay: 0.36s; }

  .listing-card {
    background: var(--white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--border);
    box-shadow: var(--shadow-sm);
    transition: box-shadow 0.25s ease, transform 0.25s ease;
  }
  .listing-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  /* Image */
  .card-img-wrap {
    position: relative;
    overflow: hidden;
    height: 200px;
    background: var(--subtle);
  }
  .card-img-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }
  .listing-card:hover .card-img-wrap img { transform: scale(1.04); }

  /* Wishlist heart */
  .card-heart {
    position: absolute;
    top: 0.7rem;
    right: 0.75rem;
    width: 32px;
    height: 32px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    cursor: pointer;
    transition: transform 0.18s;
  }
  .card-heart:hover { transform: scale(1.12); }
  .card-heart i { font-size: 0.8rem; color: var(--muted); }
  .card-heart:hover i { color: var(--accent); }

  /* Body */
  .card-body {
    padding: 0.9rem 1rem 1rem;
  }
  .card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.2rem;
  }
  .card-location {
    font-size: 0.68rem;
    color: var(--muted);
    font-weight: 500;
    letter-spacing: 0.03em;
    text-transform: uppercase;
  }
  .card-rating {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--ink);
    display: flex;
    align-items: center;
    gap: 3px;
  }
  .card-rating i { color: var(--accent); font-size: 0.65rem; }

  .card-title {
    font-size: 0.93rem;
    font-weight: 600;
    color: var(--ink);
    line-height: 1.35;
    margin-bottom: 0.65rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-divider {
    height: 1px;
    background: var(--border);
    margin-bottom: 0.65rem;
  }

  .card-price-row {
    display: flex;
    align-items: baseline;
    gap: 0.3rem;
    flex-wrap: wrap;
  }
  .price-amount {
    font-size: 1rem;
    font-weight: 700;
    color: var(--ink);
    letter-spacing: -0.02em;
  }
  .price-unit {
    font-size: 0.72rem;
    color: var(--muted);
    font-weight: 400;
  }
  .tax-info {
    display: none;
    font-size: 0.65rem;
    color: var(--accent);
    font-weight: 500;
  }

  @media (max-width: 540px) {
    #filter-bar { top: 53px; }
    .sort-wrap { padding: 1rem 1.25rem 0; }
    .top-strip { padding: 0.9rem 1.25rem; }
  }
</style>

<!-- TOP STRIP -->
<div class="top-strip">
  <h2>wan<span>d</span>erlust</h2>
  <span class="listing-count"><%= allListings.length %> stays available</span>
</div>

<!-- FILTER BAR -->
<div id="filter-bar">
  <div class="filter-pill active" data-cat="trending">  <i class="fa-solid fa-fire"></i>         <span>Trending</span></div>
  <div class="filter-pill" data-cat="hiking">           <i class="fa-solid fa-person-hiking"></i> <span>Hiking</span></div>
  <div class="filter-pill" data-cat="farmhouse">        <i class="fa-solid fa-cow"></i>            <span>Farmhouse</span></div>
  <div class="filter-pill" data-cat="snow">             <i class="fa-solid fa-snowflake"></i>      <span>Snow</span></div>
  <div class="filter-pill" data-cat="pools">            <i class="fa-solid fa-person-swimming"></i><span>Pools</span></div>
  <div class="filter-pill" data-cat="rooms">            <i class="fa-solid fa-bed"></i>            <span>Rooms</span></div>
  <div class="filter-pill" data-cat="cities">           <i class="fa-solid fa-mountain-city"></i>  <span>Cities</span></div>
  <div class="filter-pill" data-cat="camping">          <i class="fa-solid fa-campground"></i>     <span>Camping</span></div>
  <div class="filter-pill" data-cat="volcano">          <i class="fa-solid fa-volcano"></i>        <span>Volcanos</span></div>
  <div class="filter-pill" data-cat="forest">           <i class="fa-solid fa-tree"></i>           <span>Forests</span></div>
  <div class="filter-pill" data-cat="boating">          <i class="fa-solid fa-ship"></i>           <span>Boating</span></div>

  <div class="bar-spacer"></div>

  <div class="tax-toggle-wrap">
    <label class="lbl" for="taxSwitch">Show taxes</label>
    <label class="toggle-switch">
      <input type="checkbox" id="taxSwitch">
      <span class="toggle-track"></span>
    </label>
  </div>
</div>

<!-- SORT ROW -->
<div class="sort-wrap">
  <p class="result-label">Showing <strong><%= allListings.length %></strong> stays</p>
  <div class="dropdown">
    <button class="sort-btn" data-bs-toggle="dropdown">
      <i class="fa-solid fa-sliders"></i> Sort
    </button>
    <ul class="dropdown-menu dropdown-menu-end">
      <li><a class="dropdown-item" href="#">Price: Low to High</a></li>
      <li><a class="dropdown-item" href="#">Price: High to Low</a></li>
      <li><a class="dropdown-item" href="#">Newest First</a></li>
      <li><hr class="dropdown-divider"></li>
      <li><a class="dropdown-item" href="#">Top Rated</a></li>
    </ul>
  </div>
</div>

<!-- GRID -->
<div class="listings-grid">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="listing-card">

      <div class="card-img-wrap">
        <img
          src="<%= listing.image?.url || '/default.avif' %>"
          alt="<%= listing.title %>"
          onerror="this.onerror=null; this.src='/default.avif';"
        />
        <div class="card-heart">
          <i class="fa-regular fa-heart"></i>
        </div>
      </div>

      <div class="card-body">
        <div class="card-meta">
          <span class="card-location"><i class="fa-solid fa-location-dot" style="font-size:0.6rem; margin-right:3px;"></i>India</span>
          <span class="card-rating"><i class="fa-solid fa-star"></i> 4.8</span>
        </div>
        <div class="card-title"><%= listing.title %></div>
        <div class="card-divider"></div>
        <div class="card-price-row">
          <span class="price-amount">&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></span>
          <span class="price-unit">/ night</span>
          <span class="tax-info">&nbsp;+18% GST</span>
        </div>
      </div>

    </div>
  </a>
  <% } %>
</div>

<script>
  document.getElementById('taxSwitch').addEventListener('change', function () {
    document.querySelectorAll('.tax-info').forEach(el => {
      el.style.display = this.checked ? 'inline' : 'none';
    });
  });

  document.querySelectorAll('.filter-pill').forEach(pill => {
    pill.addEventListener('click', function () {
      document.querySelectorAll('.filter-pill').forEach(p => p.classList.remove('active'));
      this.classList.add('active');
    });
  });

  // Prevent heart click from navigating
  document.querySelectorAll('.card-heart').forEach(heart => {
    heart.addEventListener('click', e => {
      e.preventDefault();
      const icon = heart.querySelector('i');
      icon.classList.toggle('fa-regular');
      icon.classList.toggle('fa-solid');
      icon.style.color = icon.classList.contains('fa-solid') ? 'var(--accent)' : '';
    });
  });
</script>
</body>
