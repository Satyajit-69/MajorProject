<% layout('/layouts/boilerplate') -%>
<body>
  
  <div class="row col-8">

    <h1>Create a new Listing</h1>
    <form action="/listings" method="POST">
      
 

 <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
         name="listing[title]" 
         placeholder="enter title" 
         type="text"
         class="form-control"> 
       </div>
    

        
   <div class="mb-3">
        <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"
             placeholder="enter description" class="form-control">
            </textarea>
       </div>
    
      

    <div class="mb-3">
       <label for="image" class="form-label">Image</label>
       <input name="listing[image]"
        placeholder="enter the url / image" 
        type="text"
        class="form-control"> 
    </div>
      
    

      
        
       <div class="row"> 

        <div class="mb-3 col-md-4">
         <label for="price" class="form-label">Price</label>
         <input name="listing[price]" placeholder="enter price" type="number" class="form-control">
       </div>
    

      
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control">
       </div>      
        
       </div>  
         
       <div class="mb-3 ">
            <label for="location" class="form-label">Location</label>
              <input name="listing[location]" placeholder="enter location" type="text" class="form-control">
       </div>
        

       <br>

      <button type="submit" class="btn btn-dark add-btn">Add</button> 
      <br> <br>
      </form>
  </div>

</body> 


