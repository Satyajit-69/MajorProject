<% layout('/layouts/boilerplate') -%>

<div class="container mt-5 col-md-8">
    <h1 class="mb-4 text-center">Create a New Listing</h1>
    
    <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">

        <!-- Title -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input 
                name="listing[title]" 
                id="title"
                type="text" 
                class="form-control" 
                placeholder="Enter title" 
                required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a title.</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea 
                name="listing[description]"
                id="description"
                class="form-control"
                rows="4"
                placeholder="Enter description" 
                required></textarea>
            <div class="valid-feedback">Description looks good!</div>
            <div class="invalid-feedback">Please enter a description.</div>
        </div>
    
        <!-- Image Upload -->
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input 
                name="listing[image]" 
                id="image"
                type="file" 
                class="form-control"
                accept="image/*">
            <div class="form-text">Optional: Upload an image (JPG, PNG, GIF - Max 5MB)</div>
        </div>

        <!-- Price & Country Row -->
        <div class="row">
            <!-- Price -->
            <div class="mb-3 col-md-6">
                <label for="price" class="form-label">Price</label>
                <input 
                    name="listing[price]" 
                    id="price"
                    type="number"
                    class="form-control"
                    placeholder="Enter price"
                    min="0"
                    step="0.01"
                    required>
                <div class="valid-feedback">Price looks good!</div>
                <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <!-- Country -->
            <div class="mb-3 col-md-6">
                <label for="country" class="form-label">Country</label>
                <input 
                    name="listing[country]" 
                    id="country"
                    type="text"
                    class="form-control"
                    placeholder="Enter country" 
                    required>
                <div class="valid-feedback">Country looks good!</div>
                <div class="invalid-feedback">Please enter a valid country.</div>
            </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input 
                name="listing[location]" 
                id="location"
                type="text" 
                class="form-control" 
                placeholder="Enter location" 
                required>
            <div class="valid-feedback">Location looks good!</div>
            <div class="invalid-feedback">Please enter a valid location.</div>
        </div>

        <!-- Submit Button -->
        <div class="mb-4">
            <button type="submit" class="btn btn-success btn-lg w-100">
                <i class="fas fa-plus-circle"></i> Add Listing
            </button>
        </div>
    </form>
</div>

<!-- Bootstrap Form Validation Script -->
<script>
    // Bootstrap validation
    (function() {
        'use strict';
        
        // Fetch all forms that need validation
        var forms = document.querySelectorAll('.needs-validation');
        
        // Loop and prevent submission
        Array.prototype.slice.call(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>