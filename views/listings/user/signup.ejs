<% layout('/layouts/boilerplate') -%>

<div class="container mt-5 d-flex justify-content-center">
    <div class="col-md-6" style="border: 3px solid #000; padding: 40px; background: #fff; box-shadow: 12px 12px 0px #d90429;">
        
        <div class="text-center mb-4">
            <h1 style="font-family: 'Times New Roman', serif; font-weight: 900; text-transform: uppercase; letter-spacing: 2px; border-bottom: 5px solid #d90429; display: inline-block; color: #000;">
                Sign Up
            </h1>
        </div>

        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" style="font-weight: bold; text-transform: uppercase; font-family: 'Times New Roman', serif; color: #000;">Username</label>
                <input name="username" type="text" class="form-control" style="border: 2px solid #000; border-radius: 0; padding: 12px; font-family: serif;" required>
            </div>
             
            <div class="mb-3">
                <label class="form-label" style="font-weight: bold; text-transform: uppercase; font-family: 'Times New Roman', serif; color: #000;">Email</label>
                <input name="email" type="email" class="form-control" style="border: 2px solid #000; border-radius: 0; padding: 12px; font-family: serif;" required>
            </div>
            
            <div class="mb-4">
                <label class="form-label" style="font-weight: bold; text-transform: uppercase; font-family: 'Times New Roman', serif; color: #000;">Password</label>
                <input name="password" type="password" class="form-control" style="border: 2px solid #000; border-radius: 0; padding: 12px; font-family: serif;" required>
            </div>

            <button type="submit" class="btn w-100" style="background-color: #d90429; color: #fff; border: 2px solid #000; border-radius: 0; font-weight: bold; text-transform: uppercase; padding: 12px; transition: 0.3s;">
                Create Account
            </button>
            
            <div class="text-center mt-4">
                <a href="/login" style="color: #000; text-decoration: none; font-weight: bold; border-bottom: 2px solid #d90429; font-family: 'Times New Roman', serif;">
                    Already have an account? Log in
                </a>
            </div>
        </form>
    </div>
</div>